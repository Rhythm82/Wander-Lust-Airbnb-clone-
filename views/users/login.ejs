<% layout('/layouts/boilerplate.ejs') %>
<body>
  <div class="row mt-3">
    <div class="col-9 offset-2">
      <div class="mt-5 heading">
        <h2>Login</h2>
      </div>
      <hr />
      <form action="/login" method="POST" class="needs-validation" novalidate>
        <div class="mb-3 mt-5">
          <label for="username" class="form-label">Name:</label>
          <input
            type="text"
            name="username"
            id="username"
            placeholder="Enter you username"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter the correct name</div>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password:</label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Enter you password"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter password</div>
        </div>

        <hr class="mt-3" />

        <button type="submit" class="btn btn-update mb-4">
          <span class="regText">Login</span>
        </button>

        <!-- SIGNUP button - just redirects using JS -->
        <button
          type="button"
          class="btn btn-review mb-4"
          onclick="window.location.href='/signup'">
          <span class="regText">Signup</span>
        </button>
      </form>
    </div>
  </div>
</body>
