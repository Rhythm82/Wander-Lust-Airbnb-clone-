<% layout('/layouts/boilerplate.ejs') %>

<body>
  <form
    action="/list/<%= data._id %>?_method=PATCH"
    method="POST"
    novalidate
    class="needs-validation"
    enctype="multipart/form-data"
  >
    <div class="row">
      <div class="col-8 offset-2">
        <div class="heading mt-3">
          <h2>Edit your Hotes details</h2>
        </div>
        <hr />
        <h2 class="mt-5 mb-4 title" style="color: #036ee7">
          <%= data.title %>
        </h2>
        <div class="mb-3">
          <label for="title" class="form-label">Name: </label>
          <input
            type="text"
            name="regDetails[title]"
            id=""
            value="<%= data.title %>"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description: </label>
          <textarea
            name="regDetails[description]"
            id=""
            cols="30"
            rows="4"
            class="form-control"
          ><%= data.description %></textarea>
        </div>

        <div>
          <p>Privious image</p>
          <img src="<%=realImgUrl %>" alt="">
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">New Image:</label>
          <input type="file" name="regDetails[image]" class="form-control" />
        </div>

        <div>
          <label for="price" class="form-label">Price: </label>
          <input
            type="number"
            name="regDetails[price]"
            id=""
            value="<%= data.price%>"
            class="form-control"
            required
          />
        </div>
        <div class="row">
          <div class="mt-3 col-8">
            <label for="location" class="form-label">Location:</label>
            <input
              type="text"
              name="regDetails[location]"
              id=""
              value="<%= data.location %>"
              class="form-control"
              required
            />
          </div>
          <div class="mt-3 col-4">
            <label for="country" class="form-label">Country:</label>
            <input
              type="text"
              name="regDetails[country]"
              id=""
              value="<%= data.country %>"
              class="form-control"
              required
            />
          </div>

          <!-- Aminaties -->

          <% const allAmenities=[ "Kitchen" , "Wifi" , "Dedicated workspace" ,
          "Free parking on premises" , "Pool" , "Personal TV" , "Lift" ,
          "Airconditioning" , "Smoking" , "Outside Food" ]; %>
          <hr class="mb-2 mt-3" />
          <div class="mb-3">
            <label class="form-label mt-4 mb-3">What this place offers:</label>
            <div class="row">
              <% allAmenities.forEach((amenity)=> { %>
              <div class="col-6 col-md-4 mb-2">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox"
                  name="regDetails[amenities][]" id="<%= amenity %>" value="<%=
                  amenity %>" <%=data.amenities.includes(amenity) ? 'checked' :
                  '' %> />
                  <label class="form-check-label" for="<%= amenity %>">
                    <%= amenity %>
                  </label>
                </div>
              </div>
              <% }) %>
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-update mt-4">
          <span class="regText">Update</span>
        </button>
      </div>
    </div>
  </form>
</body>
