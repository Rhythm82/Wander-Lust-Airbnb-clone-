<% layout('/layouts/boilerplate.ejs') %>

<div class="container py-4">
  <h2 class="fw-bold mb-4">🏷️ Hotels in <%= categoryName %> Category</h2>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% listings.forEach(hotel => { %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <img src="<%= hotel.image.url %>" class="card-img-top" alt="Hotel image" style="height: 200px; object-fit: cover;" />
          <div class="card-body">
            <h5 class="card-title"><%= hotel.title %></h5>
            <p class="card-text"><%= hotel.location %></p>
            <p class="card-text text-muted">₹<%= hotel.price %>/night</p>
            <a href="/list/<%= hotel._id %>" class="btn btn-primary w-100 mt-2">View Details</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>